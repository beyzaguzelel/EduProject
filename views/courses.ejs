<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  
  <section class="heading-page header-text" id="top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h6>Here are our courses</h6>
        </div>
      </div>
    </div>
  </section>

  <section class="meetings-page" id="meetings">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <% if (flashMessages) { %>
              <% if (flashMessages.success) { %>
                <div class="alert alert-success">
              <%= flashMessages.success %>
              </div>
            <% } else if (flashMessages.error) { %>
             <div class="alert alert-danger">
              <%= flashMessages.error %>
              </div>
              <% } %>
            <% } %>
            <div class="col-lg-12">
              <div class="filters">
              
                <ul>
                  <li class="active"><a href="/courses">All Courses</a></li>
                  <% for (let i=0; i< categories.length; i++) { %>     
                    <li><a href="/courses?categories=<%= categories[i].slug %>"><%= categories[i].name %></a></li>
                  <% } %>           
                </ul>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="row ">

                <% for (let i=0; i< courses.length; i++) { %>
                <div class="col-lg-4 templatemo-item-col">
                  <div class="meeting-item">
                    <div class="thumb">
                      <div class="price">
                        <span>$14.00</span>
                      </div>
                      <a href="/courses/<%= courses[i].slug %>"><img src="/assets/images/meeting-01.jpg" alt=""></a>
                    </div>
                    <div class="down-content">
                      <div class="date">
                        <h6>Nov <span>12</span></h6>                      
                      </div>

                      <a href="/courses/<%= courses[i].slug %>"><h4><%= courses[i].name %></h4> </a>               
                      <p><%= courses[i].description.substring(0,100) + "..." %></p>                    
                      <p style="text-align: right;"><%= courses[i].user.name %></p>                     
                    </div>
                 </div>
                </div>
                <% } %>       
              </div>
            </div>

            <div class="col-lg-12">
              <div class="pagination">
                <ul>
                  <li><a href="#">1</a></li>
                  <li class="active"><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                  <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/_footer') -%>